<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background1"
    tools:context="com.example.ghada.cinematicketbooking.MovieDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/poster_large"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="6dp"
            android:layout_weight="1" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:background="#959c95b3">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:fontFamily="casual"
                android:padding="6dp"
                android:text="Title: "
                android:textColor="#8B57A9"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/mTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/title"
                android:padding="6dp"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/title"
                android:fontFamily="casual"
                android:padding="6dp"
                android:text="Rating: "
                android:textColor="#8B57A9"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_toRightOf="@id/rating"
                android:padding="6dp"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rating"
                android:fontFamily="casual"
                android:padding="6dp"
                android:text="Story: "

                android:textColor="#8B57A9"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mStory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rating"
                android:layout_toRightOf="@id/story"
                android:padding="6dp"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/mStory"
                android:fontFamily="casual"
                android:padding="6dp"
                android:text="Genres: "
                android:textColor="#8B57A9"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mStory"
                android:layout_toRightOf="@+id/genre"
                android:padding="6dp"
                android:text=""
                android:textSize="18sp" />


            <TextView
                android:id="@+id/lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/mGenre"
                android:padding="6dp"
                android:text="Spoken Language: "
                android:textColor="#8B57A9"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mLang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mGenre"
                android:layout_toRightOf="@+id/lang"
                android:padding="6dp"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/lang"
                android:padding="6dp"
                android:text="Length: "
                android:textColor="#8B57A9"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lang"
                android:layout_toRightOf="@+id/length"
                android:padding="6dp"
                android:text=""
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/book_btn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/buttonbgrnd"
                android:padding="6dp"
                android:text="Book Ticket"
                android:textColor="#595959"
                />

            <Button
                android:id="@+id/trailer_btn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonbgrnd"
                android:padding="6dp"
                android:text="Trailer"
                android:textColor="#595959"
                />
        </RelativeLayout>


    </LinearLayout>


</ScrollView>